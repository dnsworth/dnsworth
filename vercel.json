{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://dnsworth.onrender.com/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "redirects": [
    {
      "source": "http://dnsworth.com/(.*)",
      "destination": "https://dnsworth.com/$1",
      "permanent": true
    },
    {
      "source": "http://www.dnsworth.com/(.*)",
      "destination": "https://dnsworth.com/$1",
      "permanent": true
    },
    {
      "source": "https://www.dnsworth.com/(.*)",
      "destination": "https://dnsworth.com/$1",
      "permanent": true
    }
  ]
}

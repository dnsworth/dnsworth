{
  "version": 2,
  "name": "dnsworth-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "frontend/dist",
        "buildCommand": "cd frontend && npm run build:prod"
      }
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://dnsworth.onrender.com/api/$1" },
    { "source": "/health", "destination": "https://dnsworth.onrender.com/health" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/apple-touch-icon.png", "destination": "/apple-touch-icon.png" },
    { "source": "/favicon-32x32.png", "destination": "/favicon-32x32.png" },
    { "source": "/favicon-16x16.png", "destination": "/favicon-16x16.png" },
    { "source": "/android-chrome-192x192.png", "destination": "/android-chrome-192x192.png" },
    { "source": "/android-chrome-512x512.png", "destination": "/android-chrome-512x512.png" },
    { "source": "/site.webmanifest", "destination": "/site.webmanifest" },
    { "source": "/about", "destination": "/index.html" },
    { "source": "/blog", "destination": "/index.html" },
    { "source": "/blog/(.*)", "destination": "/index.html" },
    { "source": "/bulk-valuation", "destination": "/index.html" },
    { "source": "/privacy-policy", "destination": "/index.html" },
    { "source": "/terms-of-service", "destination": "/index.html" },
    { "source": "/cookie-policy", "destination": "/index.html" },
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}

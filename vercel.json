{
  "version": 2,
  "name": "dnsworth-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "source": "/sitemap.xml",
      "destination": "/frontend/public/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "source": "/robots.txt",
      "destination": "/frontend/public/robots.txt",
      "headers": {
        "Content-Type": "text/plain",
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}

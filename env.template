# DNSWorth Environment Configuration Template
# Copy this to .env and fill in your REAL values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - Generate strong secrets!)
# =============================================================================
# Generate new secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_SECRET_1=your_32_character_secret_here
APP_SECRET_2=your_32_character_secret_here
APP_SECRET_3=your_32_character_secret_here

# =============================================================================
# EMAIL CONFIGURATION (Zoho SMTP)
# =============================================================================
# Get this from Zoho Mail → Account Settings → Security → App Passwords
ZOHO_APP_PASSWORD=your_zoho_app_password_here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=https://dnsworth.com,https://www.dnsworth.com
FRONTEND_URL=https://dnsworth.com
FRONTEND_WWW_URL=https://www.dnsworth.com

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
HUMBLEWORTH_API_URL=https://valuation.humbleworth.com/api/valuation

# =============================================================================
# REDIS CONFIGURATION (Production)
# =============================================================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# REQUEST LIMITS
# =============================================================================
MAX_REQUEST_SIZE=5mb
MAX_DOMAINS_PER_REQUEST=100
REQUEST_TIMEOUT=10000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=warn
SECURITY_LOG_LEVEL=warn
AUDIT_LOG_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=https://dnsworth.onrender.com

# =============================================================================
# SECURITY NOTES
# =============================================================================
# ✅ NEVER commit this file to Git
# ✅ NEVER commit real passwords or secrets
# ✅ Use environment variables for all sensitive data
# ✅ Generate new secrets for production
# ✅ Rotate secrets regularly (every 90 days)

{
  "version": 2,
  "name": "dnsworth-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://dnsworth.onrender.com/api/$1" },
    { "source": "/health", "destination": "https://dnsworth.onrender.com/health" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/apple-touch-icon.png", "destination": "/apple-touch-icon.png" },
    { "source": "/favicon-32x32.png", "destination": "/favicon-32x32.png" },
    { "source": "/favicon-16x16.png", "destination": "/favicon-16x16.png" },
    { "source": "/android-chrome-192x192.png", "destination": "/android-chrome-192x192.png" },
    { "source": "/android-chrome-512x512.png", "destination": "/android-chrome-512x512.png" },
    { "source": "/site.webmanifest", "destination": "/site.webmanifest" },
    { "source": "/mountain-background.jpg", "destination": "/mountain-background.jpg" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
